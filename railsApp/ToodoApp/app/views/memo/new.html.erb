
<h2>新規作成</h2>
<div class="container">
  <%= form_for(@memo, url: memo_index_path) do |f| %>
    <%= f.hidden_field(:user_id) %>
    <div class="mb-3">
      <%= f.label(:title, "タイトル", {class: "form-label"})%>
      <%= f.text_field(:title, {class: "form-control"}) %>
    </div>
    <div class="mb-3">
      <%= f.label(:contet, "メモ", {class: "form-label"}) %>
      <%= f.text_area(:content, {class: "form-control", rows: "10"}) %>
    </div>
    <div class="actions">
      <%= f.submit("作成") %>
    </div>
  <% end %>
</div>
